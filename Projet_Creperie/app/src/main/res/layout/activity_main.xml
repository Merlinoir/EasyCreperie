<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@drawable/simple"
    tools:context=".MainActivity">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/linearLayout">

        <FrameLayout
            android:layout_width="50dp"
            android:layout_height="10dp"></FrameLayout>


        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/profil_salle"
            android:layout_centerHorizontal="true"
            android:onClick="salle"/>

        <FrameLayout
            android:layout_width="10dp"
            android:layout_height="0dp"></FrameLayout>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/profil_cuisine"
            android:onClick="cuisine"/>

    </LinearLayout>



    <DatePicker
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:id="@+id/datePicker"
        android:paddingLeft="50dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextClock
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textClock"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/datePicker" />

</RelativeLayout>
